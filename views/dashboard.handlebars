<h1>Dashboard</h1>

<!-- Display user's blog posts -->
<div class="blog-posts">
    {{#each blogs as |blog|}}
    <div class="blog-post">
        <h2>{{blog.title}}</h2>
        <p>{{blog.content}}</p>
        <button class="edit-button" data-id="{{blog.id}}">Edit</button>
        <button class="delete-button" data-id="{{blog.id}}">Delete</button>
        <!-- Add options to update/delete blog post -->
    </div>
    {{/each}}
</div>

<!-- Form to create a new blog post -->
<form class="new-blog-form">
    <input id="blog-title" type="text" placeholder="Title" />
    <textarea id="blog-content" placeholder="Content"></textarea>
    <button type="submit">Create Post</button>
</form>
